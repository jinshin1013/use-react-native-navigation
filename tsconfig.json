{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6", "es2016"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.ios", "*.android"],
      "src/*": ["src/*"]
    },
    "experimentalDecorators": true
  },
  "extends": "./tsconfig.lib.json",
  "include": ["Playground"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "e2e",
    "lib",
    "__test__/**/*-test.{ts,tsx}"
  ]
}
